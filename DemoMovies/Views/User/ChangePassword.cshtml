@model DemoMovies.ViewModels.ChangePassword;

@addTagHelper * , Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
    ViewBag.PageName = "Change Password";
}

@section Styles{
    <link href="~/css/form.css" rel="stylesheet" />
}

<div class="form-wrap">
    <h1 class="modify-title">Change Password</h1>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="ChangePassword">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Password" class="control-label">Enter new password:</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RepeatPassword" class="control-label">Repeat Password:</label>
                    <input asp-for="RepeatPassword" class="form-control" />
                    <span asp-validation-for="RepeatPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-controller="User" asp-action="ModifyUsers" class="back-to">Back to List</a>
    </div>
</div>