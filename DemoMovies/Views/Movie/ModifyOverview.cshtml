@model List<DemoMovies.ViewModels.ModifyOverviewModel>;

@addTagHelper * , Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
    ViewBag.PageName = "Modify Movies";
}

@section Styles{
    <link href="~/css/tables.css" rel="stylesheet" />
}

<div class="add-button">
    <a asp-controller="Movie" asp-action="Create" class="btn btn-primary">Add New Movie</a>
</div>
<div class="list-of-movies">
    <table class="table">
        <thead class="table-header">
            <tr>
                <th>Movie</th>
                <th>Action</th>
                <th>Approve</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Title</td>
                    <td>
                        <a asp-controller="Movie" asp-action="Modify" asp-route-id="@movie.Id">Modify</a> |
                        <a asp-controller="Movie" asp-action="Delete" asp-route-id="@movie.Id" onclick="return confirm('Are you sure you want to delete this movie')">Delete</a>
                    </td>
                    <td>
                        @if (!movie.IsApproved)
                        {
                            <a asp-controller="Movie" asp-action="Approve" asp-route-id="@movie.Id">Approve</a>
                        }
                        else
                        {
                            <span class="appr">Approved</span>
                        }

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>