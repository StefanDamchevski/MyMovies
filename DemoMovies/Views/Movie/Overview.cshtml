@model List<DemoMovies.ViewModels.OverviewViewModel>;

@addTagHelper * , Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
    ViewBag.PageName = "Home";
}

    <div class="search-bar" id="searchBar">
        <form asp-controller="Movie" asp-action="Overview" class="form-inline">
            <div class="form-group">
                <input name="Title" value="" id="title" class="form-control" placeholder="Search" />
                <div class="form-group">
                    <input type="submit" value="Search" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>

@if(@Model.Count == 0)
{
    <div class="not-found">
        <p>No results found</p>
    </div>
}

<div class="row">
    @foreach (var movie in @Model)
    {
        <div class="col-md-3">
            <div class="card">
                <a asp-controller="Movie" asp-action="Details" asp-route-id="@movie.Id">
                <img src="@movie.ImageUrl" class="card-img-top" height="300" width="120"></a>
                <div class="card-body">
                    <h5 class="card-title">@movie.Title (@movie.YearReleased)</h5>
                    <p class="card-text">@movie.Genre</p>
                    <p class="card-text">Created @movie.DaysCreated days ago</p>
                    <p class="card-text">@movie.Views Views</p>
                </div>
            </div>
        </div>
    }
</div>